page {
  height: 100%
}
.story-container {
  text-align: center;
  position: relative;
  height: 100%;
}
.story-swiper {
  position: relative;
  width: 100%;
  height: 80%;
  overflow: hidden;
}
.story-swiper-item {
  padding: 40rpx 20rpx 0 20rpx;
  position: absolute; 
  left:0;
  top:0;
  bottom:0;
  right:0;
  margin: auto;
  width: 80% !important;
  height: 100%;
}
.story-swiper-content {
  padding: 20rpx 20rpx 0 20rpx;
  width: 95%;
  height: 95%; 
  border-radius: 1%;
  box-shadow: 0rpx 0rpx 15rpx rgba(0,0,0,.5);
}
.story-swiper-content image{
   width: 100%; 
   height: 60%;
}
.story-swiper-content icon{
   font-size: 80rpx;
}
.story-swiper-title {
  display: block;
  font-family: cursive;
  font-size: 30rpx;
  padding: 50rpx;
}
.story-swiper-time {
  display: block;
  font-family: cursive;
  font-size: 20rpx;
  color:#BCB9B9;
  padding-bottom:30rpx; 
}