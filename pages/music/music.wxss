page {
  height: 100%
}
.music-container {
  text-align: center;
  position: relative;
  height: 100%;
}
.music-content {
  padding: 30rpx;
  font-family: cursive;
  font-size: 35rpx;
}
.music-cover {
  width: 100%;
  height: 60%;
}
.music-cover image {
  width: 100%;
  height: 95%;
}
.music-author {
  position: relative;
  width: 100%;
  height: 250rpx;
  background-color: white;
}
.music-content {
  text-align: left
}
.music-author image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 100px;
  position: absolute;
  left: 30rpx;
  top:30rpx;
}
.music-author .music-author-name {
  font-family: cursive;
  font-size: 40rpx;
  position: absolute;
  left:130rpx;
  top:60rpx;
  width: 200rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden
}
.music-author .music-author-desc {
  text-align: left;
  font-size: 25rpx;
  font-family: cursive;
  position: absolute;
  left:30rpx;
  bottom:55rpx;
  width: 300rpx;
  height: 25rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.music-author .play {
  font-size: 60rpx;
  position: absolute;
  right: 110rpx;
  top:48rpx;
}
.music-author .icon-button {
  display:inline-block;
  position: absolute;
  right:50rpx;
  bottom:40rpx;
}
.music-author .icon-button icon {
  font-size: 40rpx;
  margin:0 10rpx;
}
.active {
  color:#FF0000 !important;
}